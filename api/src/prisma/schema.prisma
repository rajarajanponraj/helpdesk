generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
  engineType      = "binary"
  binaryTargets   = ["native", "linux-musl-arm64-openssl-1.1.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model OAuthProvider {
  id               Int    @id @default(autoincrement())
  name             String @unique
  clientId         String
  clientSecret     String
  authorizationUrl String
  tokenUrl         String
  userInfoUrl      String
  redirectUri      String
  scope            String
}

model SAMLProvider {
  id           Int    @id @default(autoincrement())
  name         String @unique
  entryPoint   String
  issuer       String
  cert         String
  ssoLoginUrl  String
  ssoLogoutUrl String
  audience     String
  recipient    String
  destination  String
  acsUrl       String
}

model openIdConfig {
  id          Int    @id @default(autoincrement())
  clientId    String
  issuer      String
  redirectUri String
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  createdAt    DateTime @default(now())
  userAgent    String?
  ipAddress    String?
  apiKey       Boolean  @default(false)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model PasswordResetToken {
  id     String @id @default(cuid())
  code   String @unique
  userId String
}

model Role {
  id          String   @id @default(uuid())
  name        String   @unique
  description String?
  permissions Json[]
  isDefault   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())
  users       User[]
}

model User {
  id                           String    @id @default(uuid())
  createdAt                    DateTime  @default(now())
  updatedAt                    DateTime  @default(now())
  name                         String
  password                     String?
  email                        String    @unique
  image                        String?
  emailVerified                Boolean?
  isAdmin                      Boolean   @default(false)
  language                     String?   @default("en")
  notify_ticket_created        Boolean   @default(true)
  notify_ticket_status_changed Boolean   @default(true)
  notify_ticket_comments       Boolean   @default(true)
  notify_ticket_assigned       Boolean   @default(true)
  firstLogin                   Boolean   @default(true)
  external_user                Boolean   @default(false)
  out_of_office                Boolean   @default(false)
  out_of_office_message        String?
  out_of_office_start          DateTime?
  out_of_office_end            DateTime?

  todos         Todos[]
  tickets       Ticket[]
  file          UserFile[]
  notes         Notes[]
  Team          Team?           @relation(fields: [teamId], references: [id])
  teamId        String?
  Comment       Comment[]
  Session       Session[]
  TimeTracking  TimeTracking[]
  notifications notifications[]
  TicketFile    TicketFile[]
  roles         Role[]
}

model Team {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  name      String

  members User[]
  Ticket  Ticket[]
}

model Ticket {
  id         String       @id @default(uuid())
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @default(now())
  name       String?
  title      String
  detail     String?
  email      String?
  note       String?
  isComplete Boolean
  priority   String
  linked     Json?
  fromImap   Boolean
  Number     Int          @default(autoincrement())
  status     TicketStatus @default(needs_support)
  type       TicketType   @default(support)
  hidden     Boolean      @default(false)
  createdBy  Json?
  locked     Boolean      @default(false)

  TicketFile   TicketFile[]
  Comment      Comment[]
  TimeTracking TimeTracking[]

  team       Team?   @relation(fields: [teamId], references: [id])
  teamId     String?
  assignedTo User?   @relation(fields: [userId], references: [id])
  client     Client? @relation(fields: [clientId], references: [id])
  clientId   String?
  userId     String?

  knowledgeBase knowledgeBase[]
  notifications notifications[]
}

model TimeTracking {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  title     String
  comment   String?
  time      Int

  user     User?   @relation(fields: [userId], references: [id])
  client   Client? @relation(fields: [clientId], references: [id])
  clientId String?
  userId   String?
  ticketId String?
  ticket   Ticket? @relation(fields: [ticketId], references: [id])
}

model Comment {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())

  text       String
  public     Boolean   @default(false)
  reply      Boolean   @default(false)
  replyEmail String?
  edited     Boolean   @default(false)
  editedAt   DateTime?
  previous   String?

  userId   String?
  user     User?   @relation(fields: [userId], references: [id])
  ticketId String
  ticket   Ticket  @relation(fields: [ticketId], references: [id], onDelete: Cascade)
}

model Client {
  id           String         @id @default(uuid())
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @default(now())
  name         String
  email        String         @unique
  contactName  String
  number       String?
  notes        String?
  tickets      Ticket[]
  active       Boolean        @default(true)
  TimeTracking TimeTracking[]
}

model UserFile {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  filename  String
  path      String

  user   User   @relation(fields: [userId], references: [id])
  userId String
}

model TicketFile {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  filename  String
  path      String
  mime      String
  encoding  String
  size      Int

  ticketId String
  ticket   Ticket @relation(fields: [ticketId], references: [id])
  userId   String
  user     User   @relation(fields: [userId], references: [id])
}

model Notes {
  id         String   @id @default(uuid())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now())
  title      String
  note       String
  Favourited Boolean  @default(false)

  createdBy User   @relation(fields: [userId], references: [id])
  userId    String
}

model Todos {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  text      String
  done      Boolean  @default(false)

  createdBy User   @relation(fields: [userId], references: [id])
  userId    String
}

model Webhooks {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  name      String
  url       String
  type      Hook
  active    Boolean
  secret    String?
  createdBy String
}

model Discord {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  name      String
  secret    String?
  url       String
  active    Boolean  @default(false)
}

model Slack {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  name      String
  secret    String?
  url       String
  active    Boolean  @default(false)
}

model Email {
  id           String   @id @default(uuid())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @default(now())
  active       Boolean  @default(false)
  user         String
  pass         String?
  secure       Boolean  @default(false)
  host         String
  reply        String
  port         String
  serviceType  String   @default("other")
  clientId     String?
  clientSecret String?
  tenantId     String?
  refreshToken String?
  accessToken  String?
  expiresIn    BigInt?
  redirectUri  String?
}

model Config {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  notifications    Json? // Array of service names and an active field of TRUE OR FALSE
  sso_provider     String?
  sso_active       Boolean @default(false)
  gh_version       String?
  client_version   String?
  feature_previews Boolean @default(false)
  roles_active     Boolean @default(false)

  encryption_key   Bytes?
  first_time_setup Boolean @default(true)
}

model Uptime {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  name    String
  url     String
  active  Boolean  @default(false)
  webhook String?
  latency Int?
  status  Boolean?
}

model knowledgeBase {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  title   String
  content String
  tags    String[]
  author  String
  public  Boolean  @default(false)

  ticketId String?
  ticket   Ticket? @relation(fields: [ticketId], references: [id])
}

model Imap_Email {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  from    String?
  subject String?
  body    String?
  text    String?
  html    String?

  EmailQueue   EmailQueue? @relation(fields: [emailQueueId], references: [id])
  emailQueueId String?
}

model EmailQueue {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  name         String
  username     String
  password     String?
  hostname     String
  tls          Boolean @default(true)
  active       Boolean @default(true)
  teams        Json?
  serviceType  String  @default("other")
  clientId     String?
  clientSecret String?
  tenantId     String?
  refreshToken String?
  accessToken  String?
  expiresIn    BigInt?
  redirectUri  String?

  imap Imap_Email[]
}

model notifications {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  read Boolean @default(false)
  text String

  user     User    @relation(fields: [userId], references: [id])
  userId   String
  ticketId String?
  ticket   Ticket? @relation(fields: [ticketId], references: [id])
}

model emailTemplate {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  html String
  type Template
}

model Purchase {
  id      String @id @default(uuid())
  stockId String
  stock   Stock  @relation(fields: [stockId], references: [id])

  sellerId String
  seller   Seller @relation(fields: [sellerId], references: [id])

  quantity     Int
  price        Float
  purchaseDate DateTime @default(now())

  proofType String
  proofFile String?
}

model Seller {
  id        String     @id @default(uuid())
  name      String     @unique
  contact   String?
  email     String?    @unique
  address   String?
  purchases Purchase[]
}

model Stock {
  id          String  @id @default(uuid())
  name        String
  category    String
  description String?
  unitPrice   Float

  purchases     Purchase[]
  labStocks     LabStock[]
  movements     StockMovement[]
  scraps        StockScrap[]
  StockTransfer StockTransfer[]
}

model LabStock {
  id      String @id @default(uuid())
  stockId String
  stock   Stock  @relation(fields: [stockId], references: [id])

  labId String
  lab   Lab    @relation(fields: [labId], references: [id])

  quantity     Int
  allocatedAt  DateTime @default(now())
  serialNumber String?
  condition    String // New, Good, Needs Repair

  serviceEntries ServiceRegister[]
}

model Lab {
  id        String   @id @default(uuid())
  name      String
  location  String?
  createdAt DateTime @default(now())

  departmentId String
  department   Department @relation(fields: [departmentId], references: [id])

  stockEntries       LabStock[]
  stockMovementsFrom StockMovement[] @relation("StockMovementFromLab")
  stockMovementsTo   StockMovement[] @relation("StockMovementToLab")
  stockTransfersFrom StockTransfer[] @relation("StockTransferFromLab")
  stockTransfersTo   StockTransfer[] @relation("StockTransferToLab")
  stockScraps        StockScrap[]
}

model Department {
  id   String @id @default(uuid())
  name String @unique
  labs Lab[]
}

model StockMovement {
  id      String @id @default(uuid())
  stockId String
  stock   Stock  @relation(fields: [stockId], references: [id])

  fromLabId String?
  fromLab   Lab?    @relation(fields: [fromLabId], references: [id], name: "StockMovementFromLab")

  toLabId String
  toLab   Lab    @relation(fields: [toLabId], references: [id], name: "StockMovementToLab")

  quantity Int
  movedAt  DateTime @default(now())
}

model StockTransfer {
  id      String @id @default(uuid())
  stockId String
  stock   Stock  @relation(fields: [stockId], references: [id])

  fromLabId String
  fromLab   Lab    @relation(fields: [fromLabId], references: [id], name: "StockTransferFromLab")

  toLabId String
  toLab   Lab    @relation(fields: [toLabId], references: [id], name: "StockTransferToLab")

  quantity      Int
  transferredAt DateTime @default(now())
}

model StockScrap {
  id      String @id @default(uuid())
  stockId String
  stock   Stock  @relation(fields: [stockId], references: [id])

  labId String
  lab   Lab    @relation(fields: [labId], references: [id])

  quantity   Int
  reason     String // Damaged, Obsolete
  scrappedAt DateTime @default(now())
}

model ServiceRegister {
  id         String   @id @default(uuid())
  labStockId String
  labStock   LabStock @relation(fields: [labStockId], references: [id])

  issue  String
  sentAt DateTime @default(now())
  status String // Pending, In Service, Returned

  vendorId String?
  vendor   Vendor? @relation(fields: [vendorId], references: [id])

  serviceRecords ServiceRecord[]
}

model ServiceRecord {
  id        String          @id @default(uuid())
  serviceId String
  service   ServiceRegister @relation(fields: [serviceId], references: [id])

  repairedAt  DateTime?
  repairNotes String?
  repairedBy  String?
  condition   StockCondition // ENUM
  status      ServiceStatus // ENUM
  reason      ServiceReason? // ENUM
  vendorId    String?
  vendor      Vendor?        @relation(fields: [vendorId], references: [id])
}

model Vendor {
  id      String  @id @default(uuid())
  name    String
  contact String?
  address String?

  serviceEntries ServiceRegister[]
  serviceRecords ServiceRecord[]
}

enum StockCondition {
  NEW
  GOOD
  NEEDS_REPAIR
}

enum ServiceStatus {
  FIXED
  REPLACED
  DISCARDED
}

enum ServiceReason {
  DAMAGED
  OBSOLETE
}

enum Hook {
  ticket_created
  ticket_status_changed
}

enum TicketStatus {
  needs_support
  in_progress
  in_review
  done
}

enum TicketType {
  bug
  feature
  support
  incident
  service
  maintenance
  access
  feedback
}

enum Template {
  ticket_created
  ticket_status_changed
  ticket_assigned
  ticket_comment
}
